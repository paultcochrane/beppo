#!/usr/bin/env perl6

use v6;

sub MAIN(Str :$config-file,
         Str :$start-date, Str :$end-date,
         Bool :$show-config = False,
         Bool :$verbose = False,
     ) {
         # use config object, pass the command line options to it, and have
         # it use some kind of sensible defaults so that the main beppo
         # application doesn't have to worry about configuration, it just
         # uses the values presented to it.
         #
         #my $beppo = App::beppo.new($config-file, $start-date, $end-date, $show-config, $verbose);
         #$beppo.run;
    if $config-file {
        read-config($config-file);
    }
    if $show-config {
        print-config;
    }
}

sub read-config($config-file) {
    if not $config-file.IO.e {
        die "Config file '$config-file' does not exist";
    }
}

sub print-config {
    say 'config-file:';
    say 'start-date:';
    say 'end-date:';
}

# vim: expandtab shiftwidth=4 softtabstop=4 ft=perl6
