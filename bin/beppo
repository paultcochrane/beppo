#!/usr/bin/env perl6

use v6;

sub MAIN(Str :$config, Str :$start-date, Str :$end-date, Bool :$show-config = False) {
    if $config {
        read-config($config);
    }
}

sub read-config($config) {
    if not $config.IO.e {
        die "Config file '$config' does not exist";
    }
}

# vim: expandtab shiftwidth=4 softtabstop=4 ft=perl6
